<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TicTacToeGame.TicTacGUIController">
    <VBox>
        <children>
            <ToolBar>
                <HBox alignment="CENTER">
                    <Button fx:id="menuBtn" onAction="#goToMainMenu" prefHeight="25" prefWidth="100" text="Main Menu" />
                    <Button fx:id="restartBtn" onAction="#newGame" prefHeight="25" prefWidth="100" text="Restart" disable="true" />
                    <Label fx:id="gameStatus" />
                </HBox>
            </ToolBar>
            <GridPane>
                <Button fx:id="square11" onAction="#checkCurrentButton" prefHeight="200" prefWidth="200" text=""
                        GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Button fx:id="square12" onAction="#checkCurrentButton" prefHeight="200" prefWidth="200" text=""
                        GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Button fx:id="square13" onAction="#checkCurrentButton" prefHeight="200" prefWidth="200" text=""
                        GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <Button fx:id="square21" onAction="#checkCurrentButton" prefHeight="200" prefWidth="200" text=""
                        GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Button fx:id="square22" onAction="#checkCurrentButton" prefHeight="200" prefWidth="200" text=""
                        GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button fx:id="square23" onAction="#checkCurrentButton" prefHeight="200" prefWidth="200" text=""
                        GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <Button fx:id="square31" onAction="#checkCurrentButton" prefHeight="200" prefWidth="200" text=""
                        GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Button fx:id="square32" onAction="#checkCurrentButton" prefHeight="200" prefWidth="200" text=""
                        GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button fx:id="square33" onAction="#checkCurrentButton" prefHeight="200" prefWidth="200" text=""
                        GridPane.columnIndex="2" GridPane.rowIndex="2" />
            </GridPane>
        </children>
    </VBox>
</AnchorPane>
